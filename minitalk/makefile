# EXECUTABLES
CLIENT = client
SERVER = server

CLIENT_BONUS = client_bonus
SERVER_BONUS = server_bonus

NAME = $(CLIENT) $(SERVER)
NAME_BONUS = $(CLIENT_BONUS) $(SERVER_BONUS)

# SOURCE FILES
SERVER_SRC = utils.c server.c
CLIENT_SRC = utils.c client.c

SERVER_BONUS_SRC = utils.c server_bonus.c
CLIENT_BONUS_SRC = utils.c client_bonus.c

#OBJECT FILES
SERVER_OBJ = $(SERVER_SRC:.c=.o)
CLIENT_OBJ = $(CLIENT_SRC:.c=.o)

SERVER_BONUS_OBJ = $(SERVER_BONUS_SRC:.c=.o)
CLIENT_BONUS_OBJ = $(CLIENT_BONUS_SRC:.c=.o)

OBJS = $(SERVER_SRC:.c=.o) $(CLIENT_SRC:.c=.o)
BONUS_OBJS = $(SERVER_BONUS_SRC:.c=.o) $(CLIENT_BONUS_SRC:.c=.o)

# FLAGS
CFLAGS = -Wall -Wextra -Werror

##
COMPILATION_STARTED := .compilation_started
RM = rm -rf
##

# RULES
all : $(NAME)
	@rm -f $(COMPILATION_STARTED)
	@echo "\n(Í©ú ·ØÖ Í©ú;)‚Å≠ ‚Å≠‚Å≠ üì¶ All Done. üì¶  (Í©ú ·ØÖ Í©ú;)‚Å≠ ‚Å≠\n‚Å≠"

bonus : $(NAME_BONUS)
	@rm -f $(COMPILATION_STARTED)
	@echo "\n(Í©ú ·ØÖ Í©ú;)‚Å≠ ‚Å≠‚Å≠ üì¶ All Done. üì¶  (Í©ú ·ØÖ Í©ú;)‚Å≠ ‚Å≠\n‚Å≠"

%.o: %.c minitalk.h
	@if [ ! -f $(COMPILATION_STARTED) ]; then \
		echo "\nCompilation starting: "; \
		touch $(COMPILATION_STARTED); \
	fi
	@$(CC) $(CFLAGS) -c $< -o $@ && printf "‚åõ"

$(NAME): $(OBJS)
	@echo "\n\n‚ãÜ‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ‚ãÜ‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ"
	@echo "‚Å∫ÔΩ°Àö        Linking $@...        ÔΩ°‚Å∫‚ãÜ"
	@$(CC) $(CFLAGS) $(SERVER_OBJ) -o $(SERVER)
	@$(CC) $(CFLAGS) $(CLIENT_OBJ) -o $(CLIENT)
	@echo "‚Å∫ÔΩ°Àö   Linking of $@ complete.   ÔΩ°‚Å∫‚ãÜ"
	@echo "‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ‚ãÜ‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ"

$(NAME_BONUS): $(BONUS_OBJS)
	@echo "\n\n‚ãÜ‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ‚ãÜ‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ"
	@echo "‚Å∫ÔΩ°Àö        Linking $@...        ÔΩ°‚Å∫‚ãÜ"
	@$(CC) $(CFLAGS) $(SERVER_BONUS_OBJ) -o $(SERVER_BONUS)
	@$(CC) $(CFLAGS) $(CLIENT_BONUS_OBJ) -o $(CLIENT_BONUS)
	@echo "‚Å∫ÔΩ°Àö   Linking of $@ complete.   ÔΩ°‚Å∫‚ãÜ"
	@echo "‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ‚ãÜ‚Å∫ÔΩ°Àö‚ãÜÀô‚Äß‚Çä‚òΩ ‚óØ ‚òæ‚Çä‚ÄßÀô‚ãÜÀöÔΩ°‚Å∫‚ãÜ"

clean :
	@echo "Cleaning object files ..."
	@$(RM) $(OBJS) $(BONUS_OBJS) $(COMPILATION_STARTED)
	@echo "‚ñÑÔ∏ª„Éá‚ïê‚ïê‚îÅ‰∏Äüí• Clean complete. üí•‰∏Ä‚îÅ‚ïê‚ïê„ÉáÔ∏ª‚ñÑ"

fclean: clean
	@echo "\n‚äπ ‡£™ ÔπèìäùÔπèìÇÅÔπè‚äπ ‡£™ Àñ‚äπ ‡£™ ÔπèìäùÔπèìÇÅÔπè‚äπ ‡£™ Àñ‚äπ ‡£™ ÔπèìäùÔπèìÇÅÔπè‚äπ ‡£™ Àñ"
	@echo "\nRemoving binaries..."
	@$(RM) $(OBJS) $(BONUS_OBJS) $(NAME) $(NAME_BONUS)
	@echo "‚ñÑÔ∏ª„Éá‚ïê‚ïê‚îÅ‰∏Äüí• Full clean complete. üí•‰∏Ä‚îÅ‚ïê‚ïê„ÉáÔ∏ª‚ñÑ"

re : fclean all

.PHONY: clean